<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_base_title_bar"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/yellow_ee"
            ></RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvRuxian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="25dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_rectangle_mid"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="乳腺检查"
                    />


                <TextView
                    android:id="@+id/tvTest1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_rectangle_mid"
                    android:padding="25dp"
                    android:text="待开发功能1"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvTest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="25dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_rectangle_mid"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="待开发功能2"
                    />


                <TextView
                    android:id="@+id/tvTest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_rectangle_mid"
                    android:padding="25dp"
                    android:text="待开发功能3"
                    />

            </LinearLayout>



        </LinearLayout>





    </RelativeLayout>



</LinearLayout>